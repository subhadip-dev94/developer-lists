<%- include("./layouts/header") %>
<div class="jumbotron">
    <div class="container text-center">
        <h1>Developer Lists</h1>
        <p>Welcome! Here you can view, manage, and download information about all developers in your organization.</p>
        <p>Browse the list below to see profiles, contact details, and resumes of our talented team members.</p>
    </div>
</div>
<div class="container mt-4">
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>S.No.</th>
                <th>Name</th>
                <th>Email</th>
                <th>Skills</th>
                <th>Resume</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (allData && allData.length > 0) { %>
                <% allData.forEach((emp, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= emp.fullName %></td>
                        <td><%= emp.email %></td>
                        <td><%= emp.skills %></td>
                        <td>
                            <% if (emp.resumePdf) { %>
                                <a href="/uploads/<%= emp.resumePdf %>" class="btn btn-success btn-sm" target="_blank">View</a>
                            <% } else { %>
                                <span class="text-muted">No Resume</span>
                            <% } %>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="/edit/<%= emp._id %>" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/delete/<%= emp._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this developer?');" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="6" class="text-center">No data found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
<%- include("./layouts/footer") %>
