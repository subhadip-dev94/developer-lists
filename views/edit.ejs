<%- include("./layouts/header") %>
<div class="container">
  <h1>Developer Details</h1>
  <form action="/update-form/<%= empData._id %>" method="post" enctype="multipart/form-data">

    <div class="form-group">
      <label for="fullName">Full Name</label>
      <input id="fullName" type="text" class="form-control" placeholder="Enter Full Name" name="fullName" value="<%= empData.fullName %>" required>
    </div>
    
    <div class="form-group">
      <label for="email">Email address</label>
      <input id="email" type="email" class="form-control" placeholder="Enter email" name="email" value="<%= empData.email %>" required>
      <input type="hidden" name="_id" value="<%= empData._id %>">
    </div>
    <div class="form-group">
      <label for="skills">Skills</label>
      <input id="skills" type="text" class="form-control" placeholder="Enter skills (comma separated)" name="skills" value="<%= empData.skills %>" required>
    </div>
    
    <div class="form-group">
      <label for="resumePdf">Resume (PDF)</label><br>
      <% if (empData.resumePdf) { %>
        <a href="/uploads/<%= empData.resumePdf %>" target="_blank">View Current Resume</a><br>
      <% } %>
      <input id="resumePdf" type="file" class="form-control-file" name="resumePdf" accept="application/pdf">
    </div>

    <div class="form-group">
      <input type="submit" class="btn btn-primary" value="Update">
    </div>
  </form>
</div>

<%- include("./layouts/footer") %>
